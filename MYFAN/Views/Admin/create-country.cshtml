@model CountryViewModel
@{
    ViewBag.Title = "Create Country";
    Layout = "~/Views/Shared/_adminFilterLayout.cshtml";
}
@Html.Partial("_adminFilterMenu", new NevigationViewModel(eNavigationArea.Country))
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1><span class="sub-title">Create Country</span></h1>
        </div>
    </div>
    <div class="page-header title">
        <div class="row">
            <div class="col-lg-12">
                <div class="portlet">
                    @using (Html.BeginForm("create-country", "admin", FormMethod.Post, new { @class = "form-horizontal",enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Country Name:</label>
                            <div class="col-sm-3">
                                <div class="clearfix">
                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Icon:</label>
                            <div class="col-sm-3">
                                <div class="clearfix">
                                    <input type="file" name="uploadIcon" class="uploadIcon" id="uploadIcon" />
                                    @*@Html.TextBoxFor(m => m.IconFile, new { @class = "uploadIcon", @type = "file", @id = "uploadIcon" })*@
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Image:</label>
                            <div class="col-sm-3">
                                <div class="clearfix">
                                    <input type="file" name="uploadImage" class="uploadImage" id="uploadImage" />
                                    @*@Html.TextBoxFor(m => m.ImageFile, new {@class = "uploadImage", @type = "file", @id = "uploadImage"})*@
                                </div>
                            </div>
                        </div>
                        <div class="form-actions">
                            <div class="form-group">
                                <div class="col-sm-offset-3 col-sm-9">
                                    <input id="btnsubmit" type="submit" class="btn btn-primary" value="save">
                                    &nbsp;&nbsp;
                                    <a class="btn btn-primary" href="/admin/countries">cancel</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
