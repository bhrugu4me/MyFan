@model ManageCategoryViewModel
@{
    ViewBag.Title = "index";
    Layout = "~/Views/Shared/_adminFilterLayout.cshtml";
}
@Html.Partial("_adminFilterMenu", new NevigationViewModel(eNavigationArea.Category))
@using (Html.BeginForm("index", "admin", FormMethod.Post))
{
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1>Categories</h1> <a href="/admin/create-category">Create</a>
            </div>
        </div>
        <div class="page-header title">
            <div class="row">
                <div class="portlet">
                    @if (Model.CategoryList.Count > 0)
                    {
                        <table class="table table-bordered table-striped table-hover tc-table table-primary footable">
                            <thead>
                                <tr>
                                    <th>Category Name</th>
                                    <th>Parent Category</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.CategoryList)
                                {
                                    <tr>
                                        <td><a href="/admin/update-category/@item.ID"> @item.Name </a></td>
                                        <td>@item.parentName</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <span>No Record Found</span>
                    }

                </div>
            </div>
        </div>
    </div>

}
