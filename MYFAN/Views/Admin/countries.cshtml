@model ManageCountryViewModel
@{
    ViewBag.Title = "Manage Country";
    Layout = "~/Views/Shared/_adminFilterLayout.cshtml";
}
@Html.Partial("_adminFilterMenu", new NevigationViewModel(eNavigationArea.Country))
@using (Html.BeginForm("countries", "admin", FormMethod.Post))
{
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1>Countries</h1> <a href="/admin/create-country">Create</a>
            </div>
        </div>
        <div class="page-header title">
            <div class="row">
                <div class="portlet">
                    @if (Model.CountryList.Count > 0)
                    {
                         <table class="table table-bordered table-striped table-hover tc-table table-primary footable">
                            <thead>
                            <tr>
                                <th>Country Name</th>
                                <th>Country Icon</th>
                                <th>Country Image</th>
                            </tr></thead>
                             <tbody>
                                 @foreach (var item in Model.CountryList)
                                 {
                                     <tr>
                                         <td><a href="/admin/update-country/@item.ID">@item.Name</a></td>
                                         <td><img src="@item.Icon" /></td>
                                         <td><img src="@item.Image" /></td>
                                     </tr>
                                 }
                             </tbody>
                        </table>
                    }
                    else
                    {
                        <span>No Record Found</span>
                    }

                </div>
            </div>
        </div>
    </div>
}